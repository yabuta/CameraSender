all:test.o client.o
	g++ -o senddata test.o client.o `pkg-config --cflags opencv` `pkg-config --libs opencv`

test.o:test.cpp
	g++ -Wall -c test.cpp `pkg-config --cflags opencv` `pkg-config --libs opencv`
test.o:sendData.h

client.o:client.cpp
	g++ -Wall -c client.cpp

clean:
	rm -f senddata test.o client.o
